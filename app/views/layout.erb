<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

  <style>
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }

    li {
      float: left;
    }

    li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
     }

    li a:hover {
      background-color: #111;
    }
  </style>

  <ul>

    <% if current_shopper && logged_in?%>
      <li><a href="/clients">Clients</a></li>
      <li><a href="/shoppers">Shoppers</a></li>
      <li><a href="/shoppers/<%= current_shopper.id %>">Profile Page</a></li>
      <li><a href="/lists">Lists</a></li>
      <li><a href="/shoppers/<%= current_shopper.id %>/edit">Edit Profile</a></li>
      <li><a href="/shoppers/logout">Logout</a></li>
    <% elsif current_client && logged_in?%>
      <li><a href="/clients">Clients</a></li>
      <li><a href="/shoppers">Shoppers</a></li>
      <li><a href="/clients/<%= current_client.id %>">Profile Page</a></li>
      <li><a href="/lists">Lists</a></li>
      <li><a href="/clients/<%= current_client.id %>/edit">Edit Profile</a></li>
      <li><a href="/clients/logout">Logout</a></li>
    <% else %>
      <li><a href="/clients/login">Clients</a></li>
      <li><a href="/shoppers/login">Shoppers</a></li>
    <% end %>

  </ul>

  <title>TheGroceryShopper</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
