<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 card box-shadow">
    <h1>Log In</h1>
    <form action="/shoppers/login" method="post">
      <div class="form">
        <input type="text" class="form_input" name="name" placeholder="Shopper Name" required>
      </div>
      <div class="form">
        <input type="password" class="form_input" name="password" placeholder="Password" required>
      </div>
      <button type="submit" name="submit">Log In</button>
    </form>
  </div>
</div>


<br><br>
<h4>New shopper?<a href="/shoppers/signup">Sign Up Here</a></h4>
