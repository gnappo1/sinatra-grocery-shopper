<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 card box-shadow">
    <h1>Sign up</h1>
    <form action="/shoppers/signup" method="post">
      <div class="form">
        <input type="text" class="form_input" name="name" placeholder="Name" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="email" placeholder="Email" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="tel_nbr" placeholder="Telephone Number" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="price_per_bag" placeholder="Price Per Bag" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="location" placeholder="Location" required>
      </div>
      <div class="form">
        <input type="password" class="form_input" name="password" placeholder="Password" required>
      </div>
      <button type="submit" name="submit">Sign Up</button>
    </form>
  </div>
</div>
