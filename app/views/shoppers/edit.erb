<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 card box-shadow">
    <h1>Edit Page</h1>
    <form action="/shoppers/<%= @shopper.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <div class="form">
        <strong>Name:</strong> <input type="text" class="form_input" name="name" value="<%= @shopper.name %>">
      </div>
      <div class="form">
        <strong>Email:</strong> <input type="text" class="form_input" name="email" value="<%= @shopper.email %>">
      </div>
      <div class="form">
        <strong>Telephone Number:</strong> <input type="text" class="form_input" name="tel_nbr" value="<%= @shopper.tel_nbr %>">
      </div>
      <div class="form">
        <strong>Price Per Bag:</strong> <input type="text" class="form_input" name="price_per_bag" value="<%= @shopper.price_per_bag %>">
      </div>
      <div class="form">
        <strong>Location:</strong> <input type="text" class="form_input" name="location" value="<%= @shopper.location %>">
      </div>
      <div class="form">
        <strong>Password:</strong> <input type="password" class="form_input" name="password" >
      </div>
      <div class="form">
        <strong>Clients:</strong>
        <% Client.all.each do |client| %>
          <input type="checkbox" class="form_input" name="clients[]" value="<%= client.name %>" id="<%= client.name %>" <%='checked' if @shopper.clients.include?(client) %>><%= client.name %>
        <% end %>
      </div>
      <button type="submit" name="submit">Edit</button>
    </form>
  </div>
</div>
