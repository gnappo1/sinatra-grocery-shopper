<% if flash.has?(:message) %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:message] %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 card box-shadow">
    <h1>Log In</h1>
    <form action="/clients/login" method="post">
      <div class="form">
        <input type="text" class="form_input" name="name" placeholder="Client Name" required>
      </div>
      <div class="form">
        <input type="password" class="form_input" name="password" placeholder="Password" required>
      </div>
      <button type="submit" name="submit">Log In</button>
    </form>
  </div>
</div>


<br><br>
<h4>New client?<a href="/clients/signup">Sign Up Here</a></h4>
