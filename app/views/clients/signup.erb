<% if flash.has?(:message) %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:message] %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 card box-shadow">
    <h1>Sign up</h1>
    <form action="/clients/signup" method="post">
      <div class="form">
        <input type="text" class="form_input" name="name" placeholder="Name" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="email" placeholder="Email" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="tel_nbr" placeholder="Telephone Number" required>
      </div>
      <div class="form">
        <input type="text" class="form_input" name="address" placeholder="Full Address" required>
      </div>
      <div class="form">
        <input type="password" class="form_input" name="password" placeholder="Password" required>
      </div>
      <div class="form">
        <strong>Personal Shopper:</strong>
        <% Shopper.all.each do |shopper| %>
          <input type="radio" class="form_input" name="shopper_id" value="<%= shopper.id %>" id="<%= shopper.name %>" required><%= shopper.name %>
        <% end %>
      </div>
      <button type="submit" name="submit">Sign Up</button>
    </form>
  </div>
</div>
